<h1>Create a new portfolio item</h1>

<%= form_for(@portfolio_item) do |item| %>


  <div class="field">
    <%= item.label :title %>
    <%= item.text_field :title %>
  </div>

  <div class="field">
    <%= item.label :subtitle %>
    <%= item.text_area :subtitle %>
  </div>

	<div class="field">
    <%= item.label :body %>
    <%= item.text_area :body %>
  </div>

  <ul>
    <%= item.fields_for :technologies do |tech_form| %>
      <li><%= tech_form.label :name %></li>
      <%= tech_form.text_field :name %>
    <% end %>
  </ul>

  <div class="actions">
    <%= item.submit %>
  </div>
<% end %>
